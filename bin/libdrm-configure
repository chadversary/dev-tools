#!/usr/bin/env bash

set -eu

: ${PREFIX:=}
: ${LIBDRM_SRC_DIR:=$(pwd)}
: ${LIBDRM_BUILD_DIR:=$LIBDRM_SRC_DIR}

configure_opts=(
    CFLAGS="-g3 -O0"
    CXXFLAGS="-g3 -O0"

    --disable-libkms
    --enable-intel
    --disable-radeon
    --disable-nouveau
    --disable-vmwgfx
)

if [[ "$PREFIX" ]]; then
    configure_opts+=("--prefix=$PREFIX")
fi

if ! [[ -e "$LIBDRM_SRC_DIR/configure" ]]; then
    (
        cd "$LIBDRM_SRC_DIR"
        autoreconf -vfi
    )
fi

cd "$LIBDRM_BUILD_DIR"
"$LIBDRM_SRC_DIR/configure" "${configure_opts[@]}" "$@"
